<%- include('layouts/header') %>
    <style>
        

        .auth-wrapper {
            min-height: calc(100vh - 200px);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .social-btn {
            width: 100%;
            text-align: left;
        }

        .social-btn i {
            font-size: 18px;
            margin-right: 10px;
        }
    </style>
</head>

<body>

<!-- HEADER -->
<!-- Use same navbar from index.html -->

<!-- Breadcrumb -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-0">
                <a class="breadcrumb-item text-dark" href="index.html">Home</a>
                <span class="breadcrumb-item active">Login</span>
            </nav>
        </div>
    </div>
</div>

<!-- Login -->
<div class="container-fluid auth-wrapper">
    <div class="row px-xl-5 justify-content-center w-100">
        <div class="col-lg-5 col-md-7">
            <div class="bg-light p-30">
                <h3 class="mb-4 text-center">Login to Your Account</h3>

                <form>
                    <div class="form-group">
                        <label>Email Address</label>
                        <input type="email" class="form-control" placeholder="example@email.com">
                    </div>

                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" placeholder="********">
                    </div>

                    <div class="d-flex justify-content-between mb-3">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="remember">
                            <label class="custom-control-label" for="remember">Remember me</label>
                        </div>
                        <a href="otp.html">Forgot password?</a>
                    </div>

                    <button class="btn btn-primary btn-block py-2 mb-3">
                        Login
                    </button>

                    <div class="text-center text-muted mb-3">
                        <small>Or login with</small>
                    </div>

                    <button type="button" class="btn btn-outline-dark social-btn mb-2">
                        <i class="fab fa-google text-danger"></i>
                        Continue with Google
                    </button>

                    <button type="button" class="btn btn-outline-dark social-btn">
                        <i class="fab fa-facebook-f text-primary"></i>
                        Continue with Facebook
                    </button>
                </form>

                <div class="text-center mt-4">
                    <small>
                        Donâ€™t have an account?
                        <a href="register.html">Register now</a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

