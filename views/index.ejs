</div>

<!-- ================= CATEGORY GRID (DESKTOP ONLY) ================= -->
<div class="container-fluid pt-5 d-none d-lg-block">
  <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4">
    <span class="bg-secondary pr-3">Categories</span>
  </h2>
  <div class="row px-xl-5 pb-3">
    <% let count = 0; categories?.forEach((category, index) => { if (++count < 9){ %>
      <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
        <a class="text-decoration-none" href="/category/<%= category._id %>">
          <div class="cat-item d-flex align-items-center mb-4">
            <div class="overflow-hidden" style="width: 100px; height: 100px;">
              <img class="img-fluid"
                   src="<%= category.image?.[0]?.url || '/img/no-image-available-icon-vector.jpg' %>"
                   style="width:100%; height:100%; object-fit:cover;" alt="">
            </div>
            <div class="flex-fill pl-3">
              <h6><%= category.category_name %></h6>
              <small class="text-body"><%= productCount[index] %> Products</small>
            </div>
          </div>
        </a>
      </div>
    <% }}) %>
  </div>
</div>

<!-- ================= FEATURED PRODUCTS ================= -->
<div class="container-fluid pt-lg-4 pb-3">
  <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4" 
      style="font-size: clamp(1rem, 2vw, 1.5rem);">
    <span class="bg-secondary pr-3">Featured Products</span>
  </h2>
  <div class="row px-xl-5">
    <% if(products && products.length > 0){ 
        function shortTital(title){ 
          const Title = title.split(' '); 
          return Title.length > 1 ? `${Title[0]+' '+Title[1]}...` : Title[0];
        } 
        products.forEach((product,index) => { if(index<8){ %>
          <div class="col-6 col-md-4 col-lg-3 pb-1">
            <a href="/product-detail/<%= product.slug %>">
              <div class="product-item bg-light mb-4">
                <div class="product-img position-relative overflow-hidden">
                  <img src="<%= product.images[0].url[0] || '/img/no-image-available-icon-vector.jpg' %>"
                       class="img-fluid" style="height:250px; width:100%; object-fit:cover;" alt="">
                </div>
                <div class="text-center py-4">
                  <a class="h6 text-decoration-none text-truncate"
                     href="/product-detail/<%= product.slug %>"
                     style="font-size: clamp(1rem, 1.5vw, 1rem);"><%= shortTital(product.product_name) %></a>
                  <div class="d-flex align-items-center justify-content-center mt-2">
                    <h5 style="font-size: clamp(0.9rem, 1.5vw, 1.2rem);">Rs. <%= product.price - product.discount %></h5>
                    <h6 class="text-muted ml-2" style="font-size: clamp(0.8rem, 1.2vw, 1rem);"><del><%= product.price %></del></h6>
                  </div>
                </div>
              </div>
            </a>
          </div>
    <% }}) } %>
  </div>
</div>


